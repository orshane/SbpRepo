PORTNAME=zig
VERSION=0.12.0
FETCH_CMD=curl -L https://github.com/ziglang/zig/archive/refs/tags/0.12.0.tar.gz -o /usr/local/var/sbpi/distfiles/zig-0.12.0-src.tar.gz
BUILD_CMD=tar -xzf /usr/local/var/sbpi/distfiles/zig-0.12.0-src.tar.gz -C /usr/local/var/sbpi/work && cd /usr/local/var/sbpi/work/zig-0.12.0 && mkdir -p build && cd build && cmake .. -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr/local && make -j$(nproc)
INSTALL_CMD=cd /usr/local/var/sbpi/work/zig-0.12.0/build && sudo make install
UNINSTALL_CMD=cd /usr/local/var/sbpi/work/zig-0.12.0/build && sudo make uninstall || sudo rm -f /usr/local/bin/zig
