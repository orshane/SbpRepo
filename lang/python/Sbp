PORTNAME=python
VERSION=3.12.0
FETCH_CMD=curl -L https://www.python.org/ftp/python/3.12.0/Python-3.12.0.tgz -o /usr/local/var/sbpi/distfiles/python-3.12.0.tgz
BUILD_CMD=tar -xzf /usr/local/var/sbpi/distfiles/python-3.12.0.tgz -C /usr/local/var/sbpi/work && cd /usr/local/var/sbpi/work/Python-3.12.0 && ./configure --prefix=/usr/local --enable-optimizations && make -j$(nproc)
INSTALL_CMD=cd /usr/local/var/sbpi/work/Python-3.12.0 && sudo make altinstall
UNINSTALL_CMD=sudo rm -f /usr/local/bin/python3.12 /usr/local/bin/pip3.12
