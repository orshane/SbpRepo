PORTNAME=nodejs
VERSION=20.9.0
FETCH_CMD=curl -L https://nodejs.org/dist/v20.9.0/node-v20.9.0-linux-x64.tar.xz -o /usr/local/var/sbpi/distfiles/node-v20.9.0.tar.xz
BUILD_CMD=tar -xf /usr/local/var/sbpi/distfiles/node-v20.9.0.tar.xz -C /usr/local/var/sbpi/work
INSTALL_CMD=sudo cp -r /usr/local/var/sbpi/work/node-v20.9.0-linux-x64/* /usr/local/ && sudo ln -sf /usr/local/node-v20.9.0-linux-x64/bin/node /usr/local/bin/node && sudo ln -sf /usr/local/node-v20.9.0-linux-x64/bin/npm /usr/local/bin/npm
UNINSTALL_CMD=sudo rm -rf /usr/local/node-v20.9.0-linux-x64 && sudo rm -f /usr/local/bin/node /usr/local/bin/npm /usr/local/bin/npx
