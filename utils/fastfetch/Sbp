PORTNAME=fastfetch
VERSION=2.22.1
FETCH_CMD=curl -L https://github.com/fastfetch-cli/fastfetch/archive/refs/tags/2.22.1.tar.gz -o /usr/local/var/sbpi/distfiles/fastfetch-2.22.1.tar.gz
BUILD_CMD=tar -xzf /usr/local/var/sbpi/distfiles/fastfetch-2.22.1.tar.gz -C /usr/local/var/sbpi/work && cd /usr/local/var/sbpi/work/fastfetch-2.22.1 && mkdir -p build && cd build && cmake .. -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr/local && make -j$(nproc)
INSTALL_CMD=cd /usr/local/var/sbpi/work/fastfetch-2.22.1/build && sudo make install
UNINSTALL_CMD=cd /usr/local/var/sbpi/work/fastfetch-2.22.1/build && sudo make uninstall || sudo rm -f /usr/local/bin/fastfetch
