PORTNAME=tmux
VERSION=3.3a
FETCH_CMD=curl -L https://github.com/tmux/tmux/releases/download/3.3a/tmux-3.3a.tar.gz -o /usr/local/var/sbpi/distfiles/tmux-3.3a.tar.gz
BUILD_CMD=tar -xzf /usr/local/var/sbpi/distfiles/tmux-3.3a.tar.gz -C /usr/local/var/sbpi/work && cd /usr/local/var/sbpi/work/tmux-3.3a && ./configure --prefix=/usr/local && make
INSTALL_CMD=cd /usr/local/var/sbpi/work/tmux-3.3a && sudo make install
UNINSTALL_CMD=cd /usr/local/var/sbpi/work/tmux-3.3a && sudo make uninstall || sudo rm -f /usr/local/bin/tmux
